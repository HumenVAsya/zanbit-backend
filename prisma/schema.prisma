datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  displayName String? 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Deal {
  id        Int      @id @default(autoincrement())
  title     String
  imageUrl  String
  price     Float
  ticket    Float
  yield     Float
  sold      Float
  daysLeft  Int
  createdAt DateTime @default(now())
}
